<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samridhamla06.aptitude">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.Activities.LoginPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.Activities.MainPage"
            android:label="@string/title_activity_main_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.GroupPage"
            android:label="@string/title_activity_group_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.UserPage"
            android:label="@string/title_activity_user_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.RegisterPage"
            android:label="@string/title_activity_register_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.AddGroupPage"
            android:label="@string/title_activity_add_group_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.CommunityPage"
            android:label="@string/title_activity_community_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
